{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "An Express/MySQL boilerplate",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint -c config/general/.eslintrc . --ext .ts",
    "lint-and-fix": "eslint -c config/general/.eslintrc. --ext .ts --fix",
    "start": "nodemon",
    "test": "NODE_ENV=test mocha -r ts-node/register \"src/**/*.test.ts\"",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js"
  },
